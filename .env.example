# =============================================================================
# CineFlex Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control (they're already in .gitignore)

# =============================================================================
# TMDB API Configuration (REQUIRED)
# =============================================================================
# Get your free API key from: https://www.themoviedb.org/settings/api
VITE_TMDB_API_KEY=your_tmdb_api_key_here

# TMDB API Base URL (Optional - defaults to production)
VITE_TMDB_API_URL=https://api.themoviedb.org/3

# TMDB Image Base URL (Optional - defaults to production)
VITE_TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p

# =============================================================================
# Application Configuration (Optional)
# =============================================================================
# Application name (used in titles, meta tags, etc.)
VITE_APP_NAME=CineFlex

# Application version (from package.json)
VITE_APP_VERSION=0.0.0

# Application description (for meta tags)
VITE_APP_DESCRIPTION=Modern Movie Discovery App

# Application URL (for meta tags and social sharing)
VITE_APP_URL=https://cineflex.netlify.app

# =============================================================================
# Development Configuration (Optional)
# =============================================================================
# Enable/disable development features
VITE_DEBUG_MODE=false

# Enable/disable mock data (for development without API)
VITE_USE_MOCK_DATA=false

# Development server port (if different from default)
VITE_DEV_PORT=5173

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
# Enable/disable specific features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false
VITE_ENABLE_OFFLINE_MODE=false

# =============================================================================
# Analytics Configuration (Optional)
# =============================================================================
# Google Analytics ID (if using GA)
VITE_GA_TRACKING_ID=

# Plausible Analytics Domain (if using Plausible)
VITE_PLAUSIBLE_DOMAIN=

# =============================================================================
# Social Media Configuration (Optional)
# =============================================================================
# Twitter handle for social sharing
VITE_TWITTER_HANDLE=@cineflex

# Default social sharing image
VITE_SOCIAL_IMAGE_URL=https://cineflex.netlify.app/og-image.jpg

# =============================================================================
# Performance Configuration (Optional)
# =============================================================================
# Enable/disable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Cache duration for API responses (in seconds)
VITE_API_CACHE_DURATION=300

# =============================================================================
# Security Configuration (Optional)
# =============================================================================
# Content Security Policy (CSP) nonce
VITE_CSP_NONCE=

# =============================================================================
# Testing Configuration (Optional)
# =============================================================================
# Enable/disable test mode
VITE_TEST_MODE=false

# Test API key (for testing purposes)
VITE_TEST_API_KEY=

# =============================================================================
# Deployment Configuration (Optional)
# =============================================================================
# Environment type (development, staging, production)
VITE_NODE_ENV=development

# Build timestamp
VITE_BUILD_TIME=

# Git commit hash (for version tracking)
VITE_GIT_COMMIT_HASH=

# =============================================================================
# Notes:
# =============================================================================
# 1. All variables must be prefixed with VITE_ to be accessible in the browser
# 2. Never commit actual API keys or sensitive data
# 3. Use .env.local for local-only overrides
# 4. Use .env.development for development-specific settings
# 5. Use .env.production for production-specific settings
